{
  "name": "AWS Console Customizer",
  "version": "1.0",
  "description": "AWS Console Customizer",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://signin.aws.amazon.com/*"],
      "js": ["jquery-3.4.1.min.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
